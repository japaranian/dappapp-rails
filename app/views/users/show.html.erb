<!DOCTYPE html>
<html>
<head>
  <title>dapp</title>
    <style type="text/css">

    #notice{
      font-family: Sathu;
      font-size: 18pt;
      color: #0099DD;
      margin-left: 20px;
    }

    #twitter_logo img{
      height:50px;
      position: relative;
      float: left;
    }

    #nytimes_logo img{
      height:50px;
      position: relative;
      float: left;

    }

    #tweet{
      margin-bottom: 10px;
      box-shadow: 0px 2px 0px rgba(0,0,0,.2);
      clear: both;
      margin: 10px;
      width: 100%;
    }

    #tweetHeader{
      width: 100%;
    }

    #user-id{
      display: none;
    }

    #button{
      margin-top: 10px;
      float: right;
    }
    </style>
</head>

<p id="notice"><%= "Welcome, #{@user.name}" %></p>

<section>
<!--   <div>
    <strong>Email:</strong>
    <%= @user.email %>
  </div>
  <div>
    <strong>Name:</strong>
    <%= @user.name %>
  </div>
  <div>
    <strong>Company:</strong>
    <%= @user.company %>
  </div> -->
  <div style="display: inline-block">
    
    <div id="user-id">
      <%= @user.id %>
    </div>

    <!-- <div>
      <strong>Username:</strong>
      <%= @user.username %>
    </div> -->
  </div>
  
</section>

<div id="header">
  <div id="logo"><img src="/logo.png"></div>
  <!-- <div id="timer">12:03 <button id="startbutton">Start</button></div> -->
</div>



<div id="container">
  <div id="tweets">
      <div id="tweetlist">
        <div id="tweetHeader"></div>
            <div id="twitter_logo"><img src="/Twitter_logo_blue.png"></div>
          <ul>
        <% if @user.oauth_token %>
          <% if @tweets %>
            <% @tweets.each do |tweet| %>
              <div id="tweet"><li><%= link_to tweet["text"], "https://www.twitter.com/#{tweet['user']['screen_name']}" %></li></div>
             <% end %>
          <% end %>
        <% else %>
          <%=button_to "LoginWithTwitter", '/users/twitterlogin', method: "get" %>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="nytimes">
    <div id="articles">
    <div id="nytimes_logo"><img src="/NYT_Logo.png"></div>
      <ul id='nytimes'></ul>
<!--       NY Times feed goes here
 -->    </div>
  </div>

  <div id="chatArea">
    <div id="company_logo"><img src="/ga.png"></div>
    <div id="chatsection">
    <div class="chatArea">
    <ul class="messages"> </ul>
    </div>
    <input class="inputMessage" id="input" placeholder="write monosodium glutamate here..."/>
    </div>
  </div>
  <button id="button" name="button">Send</button>



<%= javascript_include_tag 'client.js' %>





<div id="footer">
  <%= link_to 'Edit', edit_user_path(@user) %> |
<!--   <%= link_to 'All Users', users_path %> |
 -->  <%= link_to 'Messages', messages_path %> |
  <% if current_user %>
    <%= link_to 'Log-out', login_path, method: :delete %>
  <% end %>
</div>